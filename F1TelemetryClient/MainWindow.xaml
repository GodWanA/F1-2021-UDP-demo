<Window xmlns:UserControls="clr-namespace:F1TelemetryApp.UserControls"  x:Class="F1TelemetryClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F1TelemetryClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFE4E4E4" Offset="0"/>
            <GradientStop Color="#FFA2A2A2" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid Margin="10,10,0,10" HorizontalAlignment="Left" Width="265">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border Background="Black" CornerRadius="5,5,0,0" Height="42" Grid.Row="0">
                <Grid>
                    <TextBlock x:Name="textBlock_counterHead" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0" TextAlignment="Center"/>
                </Grid>
            </Border>
            <ListView x:Name="listBox_drivers" Grid.Row="1" Background="Gray" BorderBrush="{x:Null}" Foreground="{x:Null}" SelectionChanged="listBox_drivers_SelectionChanged" BorderThickness="0,0,0,0" SizeChanged="listBox_drivers_SizeChanged">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>
        <ScrollViewer Margin="280,10,10,10">
            <StackPanel Margin="0,0,2,0">
                <GroupBox Header="Tyre conditions" FontWeight="Normal" Margin="0,0,0,5" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border Grid.ColumnSpan="2" Background="Black" CornerRadius="5" Padding="5" Margin="2,2,2,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock TextAlignment="Right" Text="Current tyre compound: " Grid.Column="0" Grid.Row="0"/>
                                <TextBlock TextAlignment="Left" Text="{Binding ActualTyreCpompund, FallbackValue=--}" Grid.Column="1" Grid.Row="0" Margin="5,0,0,0"/>

                                <TextBlock TextAlignment="Right" Text="Tyre age: " Grid.Column="2" Grid.Row="0" Margin="15,0,0,0"/>
                                <TextBlock TextAlignment="Left" Text="{Binding LapAges,FallbackValue=0}" Grid.Column="3" Grid.Row="0" Margin="5,0,0,0"/>
                                <TextBlock TextAlignment="Left" Text="Laps" Grid.Column="4" Grid.Row="0" Margin="5,0,0,0"/>
                            </Grid>
                        </Border>
                        <UserControls:TyreDataControl x:Name="tyredata_fl" Grid.Row="1" Grid.Column="0"/>
                        <UserControls:TyreDataControl x:Name="tyredata_fr" Grid.Row="1" Grid.Column="1"/>
                        <UserControls:TyreDataControl x:Name="tyredata_rl" Grid.Row="2" Grid.Column="0"/>
                        <UserControls:TyreDataControl x:Name="tyredata_rr" Grid.Row="2" Grid.Column="1"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Demage conditions" Margin="0,0,0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <UserControls:DemageAndWearDataControl x:Name="demage_fwLeft" Header="Frontwing 'LEFT' side" Grid.Column="0" Grid.ColumnSpan="3"/>
                        <UserControls:DemageAndWearDataControl x:Name="demage_fwRight" Header="Frontwing 'RIGHT' side" Grid.Column="3" Grid.ColumnSpan="3"/>
                        <UserControls:DemageAndWearDataControl x:Name="demage_fl" Header="Floor" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"/>
                        <UserControls:DemageAndWearDataControl x:Name="demage_sp" Header="Sidepod" Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="1"/>
                        <UserControls:DemageAndWearDataControl x:Name="demage_en" Header="Engine" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"/>
                        <UserControls:DemageAndWearDataControl x:Name="demage_ex" Header="Exhaust" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2"/>
                        <UserControls:DemageAndWearDataControl x:Name="demage_gb" Header="Gearbox" Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="2"/>
                        <UserControls:DemageAndWearDataControl x:Name="demage_df" Header="Diffuser" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3"/>
                        <UserControls:DemageAndWearDataControl x:Name="demage_rw" Header="Rearwing" Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="3"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Power unit condition">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <UserControls:DemageAndWearDataControl x:Name="wear_ce" Header="CE" Grid.Column="0"/>
                        <UserControls:DemageAndWearDataControl x:Name="wear_ice" Header="ICE" Grid.Column="1"/>
                        <UserControls:DemageAndWearDataControl x:Name="wear_tc" Header="TC" Grid.Column="2"/>
                        <UserControls:DemageAndWearDataControl x:Name="wear_mguh" Header="MGU-H" Grid.Column="3"/>
                        <UserControls:DemageAndWearDataControl x:Name="wear_mguk" Header="MGU-K" Grid.Column="4"/>
                        <UserControls:DemageAndWearDataControl x:Name="wear_es" Header="ES" Grid.Column="5"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
