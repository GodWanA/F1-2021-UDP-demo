<UserControl x:Class="F1TelemetryApp.UserControls.TyreDisplay.TyreIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:F1TelemetryApp.UserControls.TyreDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image_tyre" Width="24" Height="24"/>
        <TextBlock x:Name="textblock_name" Text="{Binding Tyre}" Grid.Column="1" Margin="5,2" TextWrapping="WrapWithOverflow"/>
    </Grid>
</UserControl>
