<UserControl x:Class="F1TelemetryApp.UserControls.Map"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:F1TelemetryApp.UserControls"
             mc:Ignorable="d" 
             Height="265" Width="265" Initialized="UserControl_Initialized">
    <Grid>
        <Border Background="Black" CornerRadius="5" Padding="5">
            <Grid>
                <Path x:Name="path_baseline" Stroke="Gray" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeDashCap="Round" Height="255" Width="255" />

                <Path x:Name="path_s1" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeDashCap="Round" Height="255" Width="255" />
                <Path x:Name="path_s2" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeDashCap="Round" Height="255" Width="255" />
                <Path x:Name="path_s3" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeDashCap="Round" Height="255" Width="255" />

                <Grid x:Name="grid_marshal" Height="255" Width="255" />
                <Grid x:Name="grid_drs" Height="255" Width="255" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
